{
  "name": "flash-cards",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "build:web": "turbo -F web build",
    "build:server": "turbo -F server build",
    "start": "turbo start",
    "check-types": "turbo check-types",
    "setup": "bun install && turbo -F server setup",
    "postinstall": "turbo -F server db:generate",
    "dev:native": "turbo -F native dev",
    "dev:web": "turbo -F web dev",
    "dev:server": "turbo -F server dev",
    "start:server": "turbo -F server start",
    "db:push": "turbo -F server db:push",
    "db:studio": "turbo -F server db:studio",
    "db:generate": "turbo -F server db:generate",
    "db:migrate": "turbo -F server db:migrate",
    "vercel-build": "bun install --frozen-lockfile && bun run build"
  },
  "dependencies": {
    "@trpc/react-query": "^11.4.4",
    "adm-zip": "^0.5.16",
    "sql.js": "^1.13.0"
  },
  "devDependencies": {
    "turbo": "^2.5.4"
  },
  "packageManager": "bun@1.1.42"
}