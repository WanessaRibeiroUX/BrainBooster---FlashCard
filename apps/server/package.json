{
  "name": "server",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "bun run --watch src/index.ts",
    "build": "bun build src/index.ts --outdir dist --target bun --minify",
    "start": "bun run dist/index.js",
    "start:prod": "NODE_ENV=production bun run dist/index.js",
    "check-types": "tsc --noEmit",
    "db:push": "prisma db push --schema=prisma/schema/schema.prisma",
    "db:studio": "prisma studio --schema=prisma/schema/schema.prisma",
    "db:generate": "prisma generate --schema=prisma/schema/schema.prisma",
    "db:migrate": "prisma migrate dev --schema=prisma/schema/schema.prisma",
    "make-admin": "bun run scripts/make-admin.ts",
    "setup": "bun install && bun run db:generate && bun run db:push"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.876.0",
    "@hono/node-server": "^1.19.0",
    "@prisma/client": "^6.13.0",
    "@trpc/server": "^11.4.2",
    "@types/uuid": "^10.0.0",
    "adm-zip": "^0.5.10",
    "bcryptjs": "^3.0.2",
    "better-auth": "^1.3.4",
    "dotenv": "^17.2.1",
    "hono": "^4.9.4",
    "node-zip": "^1.1.1",
    "sql.js": "^1.13.0",
    "sqlite3": "^5.1.7",
    "unzipper": "^0.12.3",
    "uuid": "^11.1.0"
  },
  "optionalDependencies": {
    "@prisma/adapter-libsql": "^6.14.0",
    "@libsql/client": "0.14.0"
  },
  "devDependencies": {
    "@types/adm-zip": "^0.5.0",
    "@types/bcryptjs": "^3.0.0",
    "@types/bun": "^1.2.6",
    "@types/node": "^20",
    "@types/sql.js": "^1.4.9",
    "@types/sqlite3": "^5.1.0",
    "@types/unzipper": "^0.10.11",
    "ignore-loader": "^0.1.2",
    "prisma": "^6.13.0",
    "typescript": "^5",
    "zod": "^4.0.13"
  }
}
